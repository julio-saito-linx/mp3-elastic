<div class="col-lg-12">
  <div class="row">
    <div class="col-lg-6">
      <span class="artist">{{ artist }}</span> - 
      <span class="album">{{ album }}</span>
      <div class="row title">
        {{ title }}
      </div>
      <div class="row player-buttons">
        <button class="btn btnPlay">
          <span class="glyphicon glyphicon-play"></span>
        </button>
        <button class="btn btnPause">
          <span class="glyphicon glyphicon-pause"></span>
        </button>
        <button class="btn btnPrev">
          <span class="glyphicon glyphicon-fast-backward"></span>
        </button>
        <button class="btn btnNext">
          <span class="glyphicon glyphicon-fast-forward"></span>
        </button>
        <button class="btn btnVolDown">
          <span class="glyphicon glyphicon-volume-down"></span>
        </button>
        <button class="btn btnVolUp">
          <span class="glyphicon glyphicon-volume-up"></span>
        </button>
      </div>
      <div class="row player-buttons">
        <button class="btn btnShowSearch">
          <span class="glyphicon glyphicon-search"></span>
        </button>
        <button class="btn btnShowPlaylist">
          <span class="glyphicon glyphicon-music"></span>
        </button>
      </div>
    </div>
    <div class="col-lg-6">
      <pre class="fullPath">{{ filename }}</pre>
      <div class="row">
        <div class="progress">
          <div class="progress-bar" role="progressbar" aria-valuenow="60" aria-valuemin="0" aria-valuemax="100" style="width: 0%;">
          </div>
        </div>
        vol: <span class="volume"></span>
      </div>
    </div>
  </div>
</div>

<audio id="audio2" 
   preload="auto">
   <p>Your browser does not support the audio element</p>
</audio>
